#!/bin/bash
APP_DIR="$(cd "$(dirname "$0")" && pwd)"

if [[ "$APP_DIR" == *".app/Contents/Resources"* ]]; then
    BASE_DIR="$(dirname "$(dirname "$(dirname "$APP_DIR")")")"
else
    BASE_DIR="$APP_DIR"
fi

cd "$BASE_DIR" || exit 1

# Open the CLI in a new Terminal window
osascript <<EOF
tell application "Terminal"
    do script "cd '$BASE_DIR'; chmod +x run-substrate.sh; ./run-substrate.sh"
    activate
end tell
EOF